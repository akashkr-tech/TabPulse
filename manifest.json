{
  "manifest_version": 3,
  "name": "TabPulse",
  "version": "1.0.0",
  "description": "Feel the pulse of your tabs - Intelligent tab management with productivity features",
  "action": {
    "default_popup": "popup.html",
    "default_title": "TabPulse - Manage Your Tabs",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}